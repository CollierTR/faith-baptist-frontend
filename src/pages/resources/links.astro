      <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
        {links.map(link => (
          <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-2xl font-bold text-primary-dark mb-2">{link.title}</h2>
            <p class="text-gray-700 mb-4">{link.description}</p>
            <a href={link.url} target="_blank" class="text-secondary-dark hover:underline">Visit Site &rarr;</a>
