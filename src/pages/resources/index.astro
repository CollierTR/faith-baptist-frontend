---
import Layout from '../../layouts/Layout.astro';

const resourceCards = [
  {
    title: "Sermons",
    description: "Listen to past sermons and teachings.",
    href: "/sermons/",
  },
  {
    title: "Blog",
    description: "Read articles and updates from our church.",
    href: "/blog/",
  },
  {
    title: "Biblical Counseling",
    description: "Find resources and information on biblical counseling.",
    href: "/resources/counseling/",
  },
  {
    title: "Recommended Links",
    description: "A collection of trustworthy and beneficial external links.",
    href: "/resources/links/",
  },
];
---

<Layout>
  <main class="w-full  min-h-screen bg-primary-light overflow-y-auto mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-10/12 mx-auto">
      <h1 class="text-4xl font-bold text-center mb-12">Resources</h1>

      <div class="grid max-w-[1200px] mx-auto grid-cols-1 gap-8 lg:grid-cols-2">
        {resourceCards.map(card => (
          <a href={card.href} class="block bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
            <h2 class="text-2xl font-bold text-primary-dark mb-2">{card.title}</h2>
            <p class="text-gray-700 mb-4">{card.description}</p>
            <span class="text-secondary-dark hover:underline">Learn More &rarr;</span>
          </a>
        ))}
      </div>
    </div>
  </main>
</Layout>
