---
import Layout from '../../layouts/Layout.astro';
import { format, parseISO } from 'date-fns';

const { slug } = Astro.params;
const response = await fetch(`https://media.faithbaptistkirksville.org/wp-json/wp/v2/posts?slug=${slug}`);
const posts = await response.json();
const post = posts[0];
---

<Layout>
  <main class="w-full flex flex-col place-items-center mx-auto bg-primary-light min-h-screen">
    {post ? (
      <article class="w-10/12 flex flex-col place-items-center">
        <div class="flex justify-center place-items-center w-full h-auto py-10 bg-primary text-white rounded-b-xl">
          <h1 class="text-5xl text-center" set:html={post.title.rendered}></h1>
        </div>
        <div class="w-[92%] bg-white rounded-md shadow-lg drop-shadow-lg -mt-10 p-10">
          <p class="text-center text-gray-600 mb-4">
            {format(parseISO(post.date), "MMMM d, yyyy")}
          </p>
          <div class="prose max-w-none" set:html={post.content.rendered} />
        </div>
      </article>
    ) : (
      <p>Loading post...</p>
    )}
  </main>
</Layout>

<style is:global>
  .prose {
    font-size: 1.125rem;
    line-height: 1.75;
  }

  .prose h1, .prose h2, .prose h3 {
    margin-bottom: 1rem;
    font-weight: 700;
  }
  .prose h1 { font-size: 2.5rem; }
  .prose h2 { font-size: 2rem; }
  .prose h3 { font-size: 1.75rem; }

  .prose p {
    margin-bottom: 1.5rem;
  }

  .prose a {
    color: #007bff;
    text-decoration: underline;
  }
  .prose a:hover {
    color: #0056b3;
  }

  .prose img {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
</style>
