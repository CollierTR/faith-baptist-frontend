---
import Layout from '../../layouts/Layout.astro';
import { format, parseISO } from 'date-fns';

const { slug } = Astro.params;
const response = await fetch(`https://media.faithbaptistkirksville.org/wp-json/wp/v2/posts?slug=${slug}`);
const posts = await response.json();
const post = posts[0];
---

<Layout>
  <main class="w-full flex flex-col place-items-center mx-auto bg-primary-light min-h-screen">
    {post ? (
      <article class="w-10/12 flex flex-col place-items-center">

        <div class="w-full bg-white shadow-lg drop-shadow-lg py-10">

        <!-- SECT: Title here -->
        <div class="flex justify-center place-items-center  h-auto py-10 mb-8 text-balance rounded-b-xl">
          <h1 class="text-6xl title font-serif text-primary-dark  text-center w-10/12" set:html={post.title.rendered}></h1>
        </div>


         <!-- SECT: date here -->
        <div class="flex justify-between w-10/12 mx-auto px-8">
          <p class="text-center text-xl text-gray-600 ">
            {format(parseISO(post.date), "MMMM d, yyyy")}
          </p>
          <p class="text-center text-xl text-gray-600 ">
            {post.author == 1 ? "Brandon Rhea" : "Robert Price"}
          </p>
        </div>

        <!-- SECT: Divider -->
          <div class="bg-primary-dark w-10/12 h-1 mx-auto my-10"></div>

          <!-- SECT: content here -->
        <div class="prose text-xl max-w-none w-10/12 mx-auto" set:html={post.content.rendered} />
        </div>


      </article>
    ) : (
      <p>Loading post...</p>
    )}
  </main>
</Layout>

<style >
  .prose {
    line-height: 1.75;
  }

  .prose h1, .prose h2, .prose h3 {
    margin-bottom: 1rem;
    font-weight: 700;
  }
  .prose h1 { font-size: 2.5rem; color: red; }
  .prose h2 { font-size: 2rem; color: green; }
  .prose h3 { font-size: 1.75rem; color: blue; }

  .prose p {
    margin-bottom: 1.5rem;
  }

  .prose a {
    color: #007bff;
    text-decoration: underline;
  }
  .prose a:hover {
    color: #0056b3;
  }

  .prose img {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin-top: 2rem;
    margin-bottom: 2rem;
  }


  .title {
    word-break: keep-all;
    overflow-wrap: normal;
    hyphens: none;
  }

</style>


