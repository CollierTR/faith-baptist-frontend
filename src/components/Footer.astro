---
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome'
import { faFacebook } from '@fortawesome/free-brands-svg-icons'
import { faPhone } from '@fortawesome/free-solid-svg-icons';
import { faEnvelope } from '@fortawesome/free-solid-svg-icons';
import { faLocationDot } from '@fortawesome/free-solid-svg-icons';
---

<footer class="flex flex-col-reverse lg:flex-row bg-primary border-t-8 border-primary-dark justify-between place-items-center lg:place-items-end p-8 xl:p-10 text-background">



  <div class="flex mt-6 place-items-end lg:hidden justify-center lg:justify-end font-serif flex-1">
    <p>&#xA9 2026 All rights reserved</p>
  </div>


  <div class="flex justify-center lg:justify-start text-xl gap-6 cursor-pointer flex-1">
    <div class="hover:text-accent">
      <a href="https://www.facebook.com/faithbaptistkv" target="_blank">
      <FontAwesomeIcon size='lg' icon={faFacebook} />
      </a>
    </div>
    <div class="hover:text-accent">
      <a href="tel:+16606651622">
      <FontAwesomeIcon size='lg' icon={faPhone} />
      </a>
    </div>
    <div class="hover:text-accent">
      <a href="mailto:faithbaptistkv@gmail.com">
      <FontAwesomeIcon size='lg' icon={faEnvelope} />
      </a>
    </div>
    <div class="hover:text-accent">
      <a href="https://maps.app.goo.gl/heG1FVPCCRnGDpm7A" target="_blank">
      <FontAwesomeIcon size='lg' icon={faLocationDot} />
      </a>
    </div>
  </div>



  <div class="flex flex-col gap-4 items-center flex-1">
    <div class="w-20 lg:w-[120px]">
    <img src="/imgs/Church-Logo-White.png">
    </div>
    <p class="italic pt-5 text-xl font-serif">"Speaking the truth in love."</p>
    <div class="pt-5">
      <div class="lg:flex text-lg gap-5 hidden font-serif">
          <a href="/" class="hover:accent hover:underline hover:decoration-accent underline-offset-4 decoration-2 transition-colors">
            Home
          </a>
          <a href="/sermons" class="hover:accent hover:underline hover:decoration-accent underline-offset-4 decoration-2 transition-colors">
            Sermons
          </a>
          <a href="/resources" class="hover:accent hover:underline hover:decoration-accent underline-offset-4 decoration-2 transition-colors">
            Resources
          </a>
          <a href="/about" class="hover:accent hover:underline hover:decoration-accent underline-offset-4 decoration-2 transition-colors">
            About
          </a>
          <a href="/contact" class="hover:accent hover:underline hover:decoration-accent underline-offset-4 decoration-2 transition-colors">
            Contact
          </a>
        </div>
    </div>
  </div>



  <div class="place-items-end hidden lg:flex justify-end font-serif flex-1">
    <p>&#xA9 2026 All rights reserved</p>
  </div>


  
</footer>

