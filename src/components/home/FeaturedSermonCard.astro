---
const { title="The Preeminence of Christ", passage="Colossians 1:16-17"} = Astro.props;
import Button from "../Button.astro";
---

<div class="flex flex-row justify-center rounded-2xl">
  <div class="w-xl">
    <img src="/imgs/bible.png"/>
  </div>
  <div class="flex flex-col place-items-center px-5 font-serif justify-center bg-primary-light">
    <div>
    <h2 class="text-2xl">{title}</h2>
    </div>
    <div class="border-t-2">
    <p class="text-lg">{passage}</p>
    <Button text="Play"/>
    </div>
  </div>
</div>
