---
import Button from "../Button.astro"
---

<section class="flex flex-col-reverse lg:flex-row font-serif">


  <div class="lg:w-1/2 py-12 lg:py-0 bg-primary-light flex justify-center place-items-center">
      <div class="flex h-[30vh] lg:h-auto flex-col justify-center place-items-center text-center lg:text-left lg:place-items-start gap-8">
        <h1 class="text-4xl xl:text-6xl leading-14 xl:leading-20">Welcome to</br> Faith Baptist Church</h1>
      <p class="text-2xl xl:text-3xl">“Speaking the truth in love”</p>
      <Button 
         text={"Join Us This Sunday"}
         fontSize={"xl"}
         px={"6"}
         py={"2"}
      />
    </div>
  </div>


  <div class=" lg:block lg:w-1/2">
    <img class="w-full" src="/imgs/Church-Img-1.jpg" alt="Image of Faith Baptist Church">
  </div>


</section>
