---
const { link="#", openNewTab=false, text="Click Me", px="6", py="3", fontSize="lg", textColor="white", background="primary"} = Astro.props;
let target = "_self"

if (openNewTab) {
  target = "_blank"
}
---

<a href={link} target={target}>
  <button class=`text-${textColor} bg-${background} text-${fontSize} bg-primary px-${px} cursor-pointer py-3 rounded-lg`>
    {text}
  </button>
</a>
